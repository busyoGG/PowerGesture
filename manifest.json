{
    "manifest_version": 2,
    "name": "PowerGesture",
    "version": "1.0",
    "description": "鼠标手势",
    "permissions": [
        "tabs",
        "storage",
        "nativeMessaging",
        "sessions",
        "search",
        "downloads"
    ],
    "background": {
        "scripts": [
            "scripts/bgActions.js",
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "match_about_blank": true,
            "match_origin_as_fallback": true,
            "all_frames": true,
            "css": [
                "css/styles.css"
            ],
            "js": [
                "scripts/content.js",
                "scripts/fgActions.js"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "powergesture@example.com",
            "strict_min_version": "91.0"
        }
    }
}